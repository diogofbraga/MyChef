<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/images/logoFundoVazio.jpg" height="60" width="140" /></a>
               
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <ul class="navbar-nav dropdown">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UtilizadorView" asp-action="Logout">
                                    Bem-vindo @User.Identity.Name (LogOut)
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-item">Autenticado como <b>@User.Identity.Name</b></li>
                                    <li class="dropdown-divider"></li>
                                    <li class="dropdown-item">Seu Perfil</li>
                                    <li class="dropdown-item">Suas Estatísticas</li>
                                    <li class="dropdown-item">Sua Despensa</li>
                                    <li class="dropdown-divider"></li>
                                    <li class="dropdown-item">Definições</li>
                                    <a class="dropdown-item" asp-controller="UtilizadorView" asp-action="Logout">
                                        LogOut
                                    </a>
                                   
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UtilizadorView" asp-action="LoginUtilizador">
                                    LogIn
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UtilizadorView" asp-action="RegisterUtilizador">
                                    Registo
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item navOptions">
                            <a class="nav-link text-dark" asp-controller="ReceitaPassoView" asp-action="GetReceitas">Receitas</a>
                        </li>
                        <li class="nav-item navOptions">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="GestaoDespensa">Gestão de Despensa</a>
                        </li>
                        <li class="nav-item navOptions">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">Sobre Nós</a>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
    </header>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - MieiMasters
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>